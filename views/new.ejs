<% include partials/header %>

<div class='container'>
  <h1 class='text-center'>Add A New Blog</h1>
  <div class='row'>
    <div style='width: 50%; margin: 25px auto;'>
      <form class="" action="/blogs" method="post">
        <div class="form-group">
          <input class='form-control' type="text" name="blogTitle" placeholder='Blog Title'>
        </div>
        <div class="form-group">
          <input class='form-control' type="text" name="blogImage" placeholder='A New Image Link'>
        </div>
        <div class="form-group">
          <input class='form-control' type="text" name="blogDesc" placeholder='Blog Description'>
        </div>
        <div class='form-group text-center'>
          <button class='btn btn-info btn-lg'type="submit" name="button">Submit A New Blog</button>
        </div>
      </form>
    </div>
  </div>
</div>


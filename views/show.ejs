<% include partials/header %>
<div class="container">
  <div class='row'>
   <div class='col-md-8 col-md-offset-2'>
     <div class="thumbnail">
       <div class="caption text-center">
       <h2><%= foundBlog.title %></h2>
       </div>
       <a href='/blogs/<%= foundBlog._id %>'><img src=<%= foundBlog.image %> alt="" /></a>
        <p>Created On: <%= foundBlog.created.toDateString() %></p>
       <p>
         <%= foundBlog.description %>
       </p>
      </div>
     </div>
    </div>
  <div class='text-center'>
    <a href="/blogs/<%= foundBlog._id %>/edit" class='btn btn-info'>Edit</a>
    <form style='display: inline-block;' action="/blogs/<%= foundBlog._id %>?_method=DELETE" method="post">
      <button class='btn btn-danger' type="submit" name="button">Delete</button>
    </form>
  </div>
</div>

<% include partials/footer %>
